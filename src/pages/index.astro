---
import Layout from '../layouts/Layout.astro';

const socialLinks = [
	{ 
		name: "GitHub", 
		url: "https://github.com/nmetulev", 
		icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>`
	},
	{ 
		name: "X", 
		url: "https://x.com/metulev", 
		icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`
	},
	{ 
		name: "LinkedIn", 
		url: "https://www.linkedin.com/in/nikolametulev/", 
		icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>`
	},
];

const projects = [
	{ 
		name: "winapp CLI", 
		url: "https://github.com/microsoft/winappCli", 
		description: "CLI tooling for Windows app development"
	},
	{ 
		name: "AI Dev Gallery", 
		url: "https://github.com/microsoft/ai-dev-gallery", 
		description: "Learn to integrate local AI models into Windows apps"
	},
	{ 
		name: "Windows Community Toolkit", 
		url: "https://github.com/CommunityToolkit/Windows", 
		description: "Helpers, extensions & custom controls for building Windows apps"
	},
	{ 
		name: "#ifdef WINDOWS", 
		url: "https://www.youtube.com/channel/UC5bAdmtv4lG3SZwRnPw6iPQ", 
		description: "YouTube show about Windows development"
	},
	{ 
		name: "Microsoft Graph Toolkit", 
		url: "https://github.com/microsoftgraph/microsoft-graph-toolkit", 
		description: "Reusable UI components for Microsoft Graph"
	},
	{ 
		name: "PWABuilder", 
		url: "https://github.com/pwa-builder/PWABuilder", 
		description: "Create & package PWAs for all app stores"
	},
];
---

<Layout>
	<!-- Floating animated shapes -->
	<div class="fixed inset-0 z-0 overflow-hidden pointer-events-none">
		<!-- Large soft blobs -->
		<div class="absolute top-20 right-20 w-96 h-96 bg-violet-300/30 dark:bg-violet-500/20 rounded-full blur-3xl animate-float-slow"></div>
		<div class="absolute bottom-20 right-40 w-72 h-72 bg-rose-300/25 dark:bg-rose-500/15 rounded-full blur-3xl animate-float-medium"></div>
		<div class="absolute top-1/2 right-10 w-56 h-56 bg-amber-300/25 dark:bg-amber-500/15 rounded-full blur-3xl animate-float-fast"></div>
		
		<!-- Smaller floating circles -->
		<div class="absolute top-32 right-1/3 w-4 h-4 bg-violet-400/40 dark:bg-violet-400/30 rounded-full animate-drift-1"></div>
		<div class="absolute top-48 right-1/4 w-3 h-3 bg-rose-400/40 dark:bg-rose-400/30 rounded-full animate-drift-2"></div>
		<div class="absolute top-64 right-1/2 w-2 h-2 bg-amber-400/50 dark:bg-amber-400/40 rounded-full animate-drift-3"></div>
		<div class="absolute bottom-32 right-1/4 w-3 h-3 bg-violet-400/40 dark:bg-violet-400/30 rounded-full animate-drift-4"></div>
		<div class="absolute bottom-48 right-1/3 w-4 h-4 bg-rose-400/30 dark:bg-rose-400/20 rounded-full animate-drift-5"></div>
	</div>

	<main class="relative z-10 min-h-screen py-16 px-8 md:px-16 lg:px-24">
		<div class="max-w-lg">
			<!-- Theme Toggle -->
			<button 
				id="theme-toggle"
				class="fixed top-6 right-6 p-2 rounded-full bg-stone-200/50 dark:bg-stone-800/50 text-stone-600 dark:text-stone-400 hover:bg-stone-300/50 dark:hover:bg-stone-700/50 transition-colors"
				aria-label="Toggle theme"
			>
				<!-- Sun icon (shown in dark mode) -->
				<svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
				</svg>
				<!-- Moon icon (shown in light mode) -->
				<svg class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
				</svg>
			</button>

			<!-- Profile Section -->
			<div class="mb-12">
				<div class="relative w-28 h-28 mb-6 group">
					<!-- Animated ring -->
					<div class="absolute inset-0 rounded-full bg-gradient-to-r from-violet-400 via-rose-400 to-amber-400 animate-spin-slow opacity-75 blur-[2px] group-hover:opacity-100 group-hover:blur-[3px] transition-all duration-300"></div>
					<div class="absolute inset-[3px] rounded-full bg-stone-100 dark:bg-stone-900"></div>
					<img 
						src="/profile.jpg" 
						alt="Nikola Metulev"
						class="absolute inset-[3px] w-[calc(100%-6px)] h-[calc(100%-6px)] rounded-full object-cover group-hover:scale-105 transition-transform duration-300"
					/>
				</div>
				<h1 class="text-3xl font-bold text-stone-800 dark:text-stone-100 mb-3">Nikola Metulev</h1>
				<p class="text-stone-600 dark:text-stone-400 leading-relaxed">
					Technical product maker of developer tools at Microsoft. Trying to optimize and simplify the process of building things.
				</p>
				<p class="text-stone-500 dark:text-stone-500 mt-2">
					Occasional speaker at Build, Ignite, and other conferences.
				</p>
			</div>

			<!-- Social Links -->
			<div class="flex gap-5 mb-12">
				{socialLinks.map((link) => (
					<a 
						href={link.url}
						target="_blank"
						rel="noopener noreferrer"
						class="text-stone-400 hover:text-stone-800 dark:text-stone-500 dark:hover:text-stone-200 transition-colors"
						aria-label={link.name}
					>
						<Fragment set:html={link.icon} />
					</a>
				))}
			</div>

			<!-- Projects Section -->
			<div>
				<h2 class="text-xs font-medium text-stone-400 dark:text-stone-500 uppercase tracking-wider mb-4">Professional Projects I Started or Led</h2>
				<div class="space-y-4">
					{projects.map((project) => (
						<a 
							href={project.url}
							target="_blank"
							rel="noopener noreferrer"
							class="block group"
						>
							<h3 class="text-stone-800 dark:text-stone-200 font-medium group-hover:text-violet-600 dark:group-hover:text-violet-400 transition-colors">{project.name}</h3>
							<p class="text-stone-500 dark:text-stone-500 text-sm">{project.description}</p>
						</a>
					))}
				</div>
			</div>
		</div>
	</main>
</Layout>

<script>
	// Theme toggle
	const themeToggle = document.getElementById('theme-toggle');
	themeToggle?.addEventListener('click', () => {
		const isDark = document.documentElement.classList.toggle('dark');
		localStorage.setItem('theme', isDark ? 'dark' : 'light');
	});
</script>

<style>
	@keyframes float-slow {
		0%, 100% { transform: translate(0, 0) scale(1); }
		33% { transform: translate(40px, -50px) scale(1.05); }
		66% { transform: translate(-30px, 30px) scale(0.95); }
	}
	@keyframes float-medium {
		0%, 100% { transform: translate(0, 0) scale(1); }
		50% { transform: translate(-50px, -30px) scale(1.1); }
	}
	@keyframes float-fast {
		0%, 100% { transform: translate(0, 0); }
		25% { transform: translate(30px, 20px); }
		75% { transform: translate(-25px, -35px); }
	}
	@keyframes drift-1 {
		0%, 100% { transform: translate(0, 0); opacity: 0.4; }
		50% { transform: translate(-100px, 80px); opacity: 0.7; }
	}
	@keyframes drift-2 {
		0%, 100% { transform: translate(0, 0); opacity: 0.4; }
		50% { transform: translate(60px, 120px); opacity: 0.6; }
	}
	@keyframes drift-3 {
		0%, 100% { transform: translate(0, 0); opacity: 0.5; }
		50% { transform: translate(-80px, -60px); opacity: 0.8; }
	}
	@keyframes drift-4 {
		0%, 100% { transform: translate(0, 0); opacity: 0.4; }
		50% { transform: translate(70px, -90px); opacity: 0.7; }
	}
	@keyframes drift-5 {
		0%, 100% { transform: translate(0, 0); opacity: 0.3; }
		50% { transform: translate(-50px, 70px); opacity: 0.6; }
	}
	.animate-float-slow {
		animation: float-slow 20s ease-in-out infinite;
	}
	.animate-float-medium {
		animation: float-medium 15s ease-in-out infinite;
	}
	.animate-float-fast {
		animation: float-fast 12s ease-in-out infinite;
	}
	.animate-drift-1 {
		animation: drift-1 18s ease-in-out infinite;
	}
	.animate-drift-2 {
		animation: drift-2 22s ease-in-out infinite;
	}
	.animate-drift-3 {
		animation: drift-3 16s ease-in-out infinite;
	}
	.animate-drift-4 {
		animation: drift-4 20s ease-in-out infinite;
	}
	.animate-drift-5 {
		animation: drift-5 24s ease-in-out infinite;
	}
	@keyframes spin-slow {
		from { transform: rotate(0deg); }
		to { transform: rotate(360deg); }
	}
	.animate-spin-slow {
		animation: spin-slow 8s linear infinite;
	}
</style>
